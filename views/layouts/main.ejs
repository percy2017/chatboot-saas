<!DOCTYPE html>
<html lang="es" data-bs-theme="light" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBot SaaS</title>
    <link rel="icon" type="image/png" href="/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="/pages.css">
    <%- style %>
</head>
<body class="d-flex flex-column h-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/logo.png" alt="Logo ChatBot SaaS" width="30" height="30" class="d-inline-block align-text-top me-2">
                ChatBot SaaS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof activeTab !== 'undefined' && activeTab === 'home') ? 'active' : '' %>" href="/">Inicio</a>
                    </li>
                    <!-- Espacio para futuros elementos de navegación izquierda -->
                </ul>
                <ul class="navbar-nav">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">Panel de Administración</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="logoutButton">Cerrar Sesión</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof activeTab !== 'undefined' && activeTab === 'login') ? 'active' : '' %>" href="/login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof activeTab !== 'undefined' && activeTab === 'register') ? 'active' : '' %>" href="/register">Registrarse</a>
                        </li>
                    <% } %>
                </ul>
                <!-- Theme Toggle -->
                <div class="d-flex align-items-center ms-2">
                    <button id="theme-toggle" class="btn btn-outline-light" type="button" title="Cambiar tema">
                        <span id="theme-icon">🌙</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 d-flex flex-column">
        <%- body %>
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p>&copy; 2025 ChatBot SaaS. Todos los derechos reservados.</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="/pages.js"></script>
    <%- script %>
</body>
</html>