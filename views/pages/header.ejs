<!DOCTYPE html>
<html lang="es" data-bs-theme="light" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBot SaaS - <%= typeof title !== 'undefined' ? title : 'P치gina Principal' %></title>
    <link rel="icon" type="image/png" href="/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/pages.css">
    <% if (typeof css !== 'undefined') { %>
        <link rel="stylesheet" href="<%= css %>">
    <% } %>
</head>
<body class="d-flex flex-column h-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/logo.png" alt="Logo ChatBot SaaS" width="30" height="30" class="d-inline-block align-text-top me-2">
                ChatBot SaaS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Inicio</a>
                    </li>           
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Usuario logueado -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hola, <%= user.name %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/admin">Panel de Administraci칩n</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#" id="publicLogoutButton">Cerrar Sesi칩n</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <!-- Usuario no logueado -->
                        <li class="nav-item" id="loginLink">
                            <a class="nav-link" href="/login">Iniciar Sesi칩n</a>
                        </li>
                        <li class="nav-item" id="registerLink">
                            <a class="nav-link" href="/register">Registrarse</a>
                        </li>
                    <% } %>
                    <!-- Theme Toggle -->
                    <li class="nav-item ms-2">
                        <button id="theme-toggle" class="btn btn-outline-light" type="button" title="Cambiar tema">
                            <span id="theme-icon">游깿</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor principal que empuja el footer al final -->
    <main class="flex-shrink-0">